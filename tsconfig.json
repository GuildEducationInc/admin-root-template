{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es5", "dom"],
    "module": "esNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": false,
    "target": "es5",
    "typeRoots": [
      "node_modules/@guildeducationinc/recess/components",
      "node_modules/@types",
    ]
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
